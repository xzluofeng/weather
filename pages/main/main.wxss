/* pages/main/main.wxss */
page{
    height: 100%;
}
.content{
    font-family: 微软雅黑,宋体;
    font-size: 14px;
    background-size: cover;
    height: 100%;
    width: 100%;
    background-image: url("../assets/img/bg.png");
    color:#fff;
}
.today{
    padding-top: 50rpx;
    height: 50%;
}
.info{
    padding: 20px;
    background: #fff;
    background: rgba(0,0,0,0.5);
    box-shadow: 10px 10px 20px rgba(0,0,0,0.5);
}
.temp{
    font-size: 50px;
    text-align: center;
}
.weather{
    text-align: center;
}
.tip{
    margin-top: 10rpx;
    text-align: center;
}
.city{
    color:white;
    font-size: 16px;
    text-align: right;
    margin-right: 10rpx;
    margin-top: 30rpx;
}
.future{
    display: flex;
    flex-direction: row;
    height: 40%;
    padding-left: 5rpx;
    background: #FFFFFF;
    background: rgba(0,0,0,0.5);
    text-align: center;
    /*padding-top: 10rpx;*/
    padding-bottom: 20rpx;
}
.future-item{
    min-height: 100%;
    width: 165rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border:2px solid coral;
    border-radius: 10px;
    padding-top: 20rpx;
}
.future-item view{
    margin-top: 20rpx;
    font-size:30rpx;
}